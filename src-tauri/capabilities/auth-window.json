{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "auth-window",
    "description": "Auth window: permissions for authentication flow",
    "windows": ["auth"],
    "permissions": [
        "core:default",
        "core:window:default",
        "core:window:allow-show",
        "core:window:allow-hide",
        "core:window:allow-center",
        "core:window:allow-set-focus",
        "core:event:default",
        "core:event:allow-emit",
        "core:event:allow-listen",
        "store:default",
        "shell:allow-open"
    ]
}
